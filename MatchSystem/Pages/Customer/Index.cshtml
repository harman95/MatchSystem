@page
@model MatchSystem.Pages.Customer.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Customer[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Customer[0].MobileNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Customer[0].EmailID)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].Seat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].Ticket)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Customer) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MobileNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Seat.SeatNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ticket.Number)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
